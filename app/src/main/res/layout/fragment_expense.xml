<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExpenseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    Date-->
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="25sp"
            android:textColor="#A8A8A8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit_date"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/date"
            app:layout_constraintTop_toTopOf="@id/date"
            app:layout_constraintBottom_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--    Category-->
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분류"
            android:textSize="25sp"
            android:textColor="#A8A8A8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintEnd_toStartOf="@id/edit_date"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_category"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/category"
            app:layout_constraintTop_toTopOf="@id/category"
            app:layout_constraintBottom_toBottomOf="@id/category"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--    Amount-->
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액"
            android:textSize="25sp"
            android:textColor="#A8A8A8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category"
            app:layout_constraintEnd_toStartOf="@id/edit_amount"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@id/amount"
            app:layout_constraintTop_toTopOf="@id/amount"
            app:layout_constraintBottom_toBottomOf="@id/amount"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--    Description-->
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="25sp"
            android:textColor="#A8A8A8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amount"
            app:layout_constraintEnd_toStartOf="@id/edit_desc"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/desc"
            app:layout_constraintTop_toTopOf="@id/desc"
            app:layout_constraintBottom_toBottomOf="@id/desc"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc"
            android:layout_marginTop="40dp"
            android:text="저장"
            android:textSize="15sp"
            android:background="@drawable/roundedbutton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_button"
            android:id="@+id/test_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>